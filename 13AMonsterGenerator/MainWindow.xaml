<Window x:Name="window" x:Class="_13AMonsterGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="13th Age - Monster Generator" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <ComboBox x:Name="PlayerLevelComboBox" HorizontalAlignment="Left" Margin="87,14,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="PlayerLevelLabel" Content="Player Level" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="MonsterLevelComboBox" HorizontalAlignment="Left" Margin="301,14,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.233,0.591"/>
        <Label x:Name="MonsterLevelLabel" Content="Monster Level" HorizontalAlignment="Left" Margin="212,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="GenerateMonster" Content="Generate" HorizontalAlignment="Left" Margin="426,14,0,0" VerticalAlignment="Top" Width="75" Height="22" Click="GenerateMonsterClicked"/>
        <TextBox x:Name="MonsterTextBox" TextWrapping="Wrap" Text="TextBox" Margin="10,40,10,10"/>

    </Grid>
</Window>
